@using AUA_test.Models
@model dynamic

@{
    ViewBag.Title = "Details";

}

<h2>Details</h2>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Model.Class.Name;
        </dd>

        <dt>
            Section
        </dt>

        <dd>
            @Model.Class.Section
        </dd>

        <dt>
            StartTime
        </dt>

        <dd>
            @Model.Class.StartTime
        </dd>

        <dt>
            EndTime
        </dt>

        <dd>
            @Model.Class.EndTime
        </dd>

        <dt>
            Length
        </dt>

        <dd>
            @Model.Class.Length)
        </dd>

        <dt>
            Days
        </dt>

        <dd>
            @Model.Class.Days
        </dd>
        
    </dl>
    <p>Students</p>
    <table>
        <tr>
            <th>Name  </th>
            <th>  Last Name</th>
        </tr>
        @foreach (Students student in Model.Students)
        {
            <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit Class", "Edit", new { id = Model.Class.Id }) |
    @Html.ActionLink("Edit Students", "Index","Students", new { classId = Model.Class.Id },null) |
    @Html.ActionLink("Back to List", "Index")
</p>
